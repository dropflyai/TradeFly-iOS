# Fastfile for TradeFly iOS automation

default_platform(:ios)

platform :ios do
  desc "Build the app for testing"
  lane :build do
    build_app(
      scheme: "TradeFly",
      destination: "generic/platform=iOS Simulator",
      skip_archive: true,
      skip_codesigning: true
    )
  end

  desc "Run all tests"
  lane :test do
    scan(
      scheme: "TradeFly",
      device: "iPhone 17 Pro",
      code_coverage: true
    )
  end

  desc "Take screenshots"
  lane :screenshots do
    snapshot
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    increment_build_number

    # Use automatic code signing
    update_code_signing_settings(
      use_automatic_signing: true,
      team_id: "G46B7YC46C",
      path: "TradeFly.xcodeproj"
    )

    build_app(
      scheme: "TradeFly",
      export_method: "app-store",
      xcargs: "-allowProvisioningUpdates",
      disable_xcpretty: true,
      export_options: {
        method: "app-store",
        teamID: "G46B7YC46C",
        signingStyle: "automatic",
        uploadSymbols: true,
        provisioningProfiles: {
          "com.dropfly.TradeFly" => "TradeFly AppStore"
        }
      }
    )

    # Upload to TestFlight
    # Debug: Check environment variables
    UI.message("DEBUG: APP_SPECIFIC_PASSWORD present? #{!ENV['APP_SPECIFIC_PASSWORD'].nil? && !ENV['APP_SPECIFIC_PASSWORD'].empty?}")
    UI.message("DEBUG: APPLE_ID present? #{!ENV['APPLE_ID'].nil? && !ENV['APPLE_ID'].empty?}")

    # GitHub Actions: Use xcrun altool with App-Specific Password
    if ENV["APP_SPECIFIC_PASSWORD"] && !ENV["APP_SPECIFIC_PASSWORD"].empty?
      UI.message("üîë Using App-Specific Password for TestFlight upload...")
      apple_id = ENV["APPLE_ID"] || "dropflyai@gmail.com"
      sh("xcrun altool --upload-app -f '#{lane_context[SharedValues::IPA_OUTPUT_PATH]}' -t ios -u '#{apple_id}' -p '#{ENV['APP_SPECIFIC_PASSWORD']}' --verbose")
      UI.success("‚úÖ Uploaded to TestFlight successfully!")

    # Local: Open in Transporter for manual upload
    else
      UI.important("‚ö†Ô∏è  No APP_SPECIFIC_PASSWORD found - using Transporter fallback")
      UI.important("üì¶ Opening in Transporter for manual upload...")
      sh("open -a Transporter '#{lane_context[SharedValues::IPA_OUTPUT_PATH]}'")
    end
  end

  desc "Deploy to App Store"
  lane :release do
    increment_build_number
    build_app(scheme: "TradeFly")
    upload_to_app_store(
      submit_for_review: false,
      automatic_release: false
    )
  end
end
