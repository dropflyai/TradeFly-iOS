# Fastfile for TradeFly iOS automation

default_platform(:ios)

platform :ios do
  desc "Build the app for testing"
  lane :build do
    build_app(
      scheme: "TradeFly",
      destination: "generic/platform=iOS Simulator",
      skip_archive: true,
      skip_codesigning: true
    )
  end

  desc "Run all tests"
  lane :test do
    scan(
      scheme: "TradeFly",
      device: "iPhone 17 Pro",
      code_coverage: true
    )
  end

  desc "Take screenshots"
  lane :screenshots do
    snapshot
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    increment_build_number

    # Use automatic code signing
    update_code_signing_settings(
      use_automatic_signing: true,
      team_id: "G46B7YC46C",
      path: "TradeFly.xcodeproj"
    )

    build_app(
      scheme: "TradeFly",
      export_method: "app-store",
      xcargs: "-allowProvisioningUpdates",
      disable_xcpretty: true,
      export_options: {
        method: "app-store",
        teamID: "G46B7YC46C",
        signingStyle: "automatic",
        uploadSymbols: true,
        provisioningProfiles: {
          "com.dropfly.TradeFly" => "TradeFly AppStore"
        }
      }
    )

    # Upload to TestFlight
    # Priority 1: App-Specific Password (for GitHub Actions)
    if ENV["APPLE_ID"] && ENV["APP_SPECIFIC_PASSWORD"]
      UI.message("ðŸ”‘ Using App-Specific Password for upload...")
      sh("xcrun altool --upload-app -f '#{lane_context[SharedValues::IPA_OUTPUT_PATH]}' -t ios -u '#{ENV['APPLE_ID']}' -p '#{ENV['APP_SPECIFIC_PASSWORD']}'")
      UI.success("âœ… Uploaded to TestFlight successfully!")

    # Priority 2: App Store Connect API Key
    elsif File.exist?(File.expand_path("~/.appstoreconnect/private_keys/AuthKey.p8"))
      UI.message("ðŸ”‘ Using App Store Connect API Key...")
      api_key = app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_filepath: File.expand_path("~/.appstoreconnect/private_keys/AuthKey.p8"),
        duration: 1200,
        in_house: false
      )
      upload_to_testflight(
        api_key: api_key,
        skip_waiting_for_build_processing: true,
        skip_submission: true
      )

    # Priority 3: Open in Transporter (local development)
    else
      UI.important("ðŸ“¦ Opening in Transporter for manual upload...")
      sh("open -a Transporter '#{lane_context[SharedValues::IPA_OUTPUT_PATH]}'")
    end
  end

  desc "Deploy to App Store"
  lane :release do
    increment_build_number
    build_app(scheme: "TradeFly")
    upload_to_app_store(
      submit_for_review: false,
      automatic_release: false
    )
  end
end
