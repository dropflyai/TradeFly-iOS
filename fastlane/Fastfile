# Fastfile for TradeFly iOS automation

default_platform(:ios)

platform :ios do
  desc "Build the app for testing"
  lane :build do
    build_app(
      scheme: "TradeFly",
      destination: "generic/platform=iOS Simulator",
      skip_archive: true,
      skip_codesigning: true
    )
  end

  desc "Run all tests"
  lane :test do
    scan(
      scheme: "TradeFly",
      device: "iPhone 17 Pro",
      code_coverage: true
    )
  end

  desc "Take screenshots"
  lane :screenshots do
    snapshot
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    increment_build_number

    # Use automatic code signing
    update_code_signing_settings(
      use_automatic_signing: true,
      team_id: "G46B7YC46C",
      path: "TradeFly.xcodeproj"
    )

    build_app(
      scheme: "TradeFly",
      export_method: "app-store",
      xcargs: "-allowProvisioningUpdates",
      disable_xcpretty: true,
      export_options: {
        method: "app-store",
        teamID: "G46B7YC46C",
        signingStyle: "automatic",
        uploadSymbols: true
      }
    )

    # Check for App Store Connect API Key
    api_key_path = File.expand_path("~/.appstoreconnect/private_keys/AuthKey.p8")

    if File.exist?(api_key_path)
      # Use App Store Connect API Key (automated, no password needed)
      api_key = app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_filepath: api_key_path,
        duration: 1200,
        in_house: false
      )

      upload_to_testflight(
        api_key: api_key,
        skip_waiting_for_build_processing: true,
        skip_submission: true,
        distribute_external: false,
        notify_external_testers: false
      )
    else
      # Fallback: Use xcrun altool (uses Xcode's authentication)
      sh("xcrun altool --upload-app -f '#{lane_context[SharedValues::IPA_OUTPUT_PATH]}' --type ios --apiKey #{ENV['APP_STORE_CONNECT_KEY_ID']} --apiIssuer #{ENV['APP_STORE_CONNECT_ISSUER_ID']}") rescue nil

      # If that fails, just export the IPA for manual upload
      UI.important("‚ö†Ô∏è  Automated upload failed. IPA ready at: #{lane_context[SharedValues::IPA_OUTPUT_PATH]}")
      UI.important("üì¶ Opening in Transporter...")
      sh("open -a Transporter '#{lane_context[SharedValues::IPA_OUTPUT_PATH]}'")
    end
  end

  desc "Deploy to App Store"
  lane :release do
    increment_build_number
    build_app(scheme: "TradeFly")
    upload_to_app_store(
      submit_for_review: false,
      automatic_release: false
    )
  end
end
