# Fastfile for TradeFly iOS automation

default_platform(:ios)

platform :ios do
  desc "Build the app for testing"
  lane :build do
    build_app(
      scheme: "TradeFly",
      destination: "generic/platform=iOS Simulator",
      skip_archive: true,
      skip_codesigning: true
    )
  end

  desc "Run all tests"
  lane :test do
    scan(
      scheme: "TradeFly",
      device: "iPhone 17 Pro",
      code_coverage: true
    )
  end

  desc "Take screenshots"
  lane :screenshots do
    snapshot
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    increment_build_number

    # Use manual code signing for CI/CD
    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: "G46B7YC46C",
      path: "TradeFly.xcodeproj",
      profile_name: "TradeFly AppStore",
      code_sign_identity: "Apple Distribution"
    )

    build_app(
      scheme: "TradeFly",
      export_method: "app-store",
      disable_xcpretty: true,
      export_options: {
        method: "app-store",
        teamID: "G46B7YC46C",
        signingStyle: "manual",
        uploadSymbols: true,
        provisioningProfiles: {
          "com.dropfly.TradeFly" => "TradeFly AppStore"
        }
      }
    )

    # Upload to TestFlight
    # Support both env variable naming conventions
    app_password = ENV["APP_SPECIFIC_PASSWORD"] || ENV["FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD"]
    apple_id = ENV["APPLE_ID"] || ENV["FASTLANE_USER"] || "dropflyai@gmail.com"

    # GitHub Actions: Use xcrun altool with App-Specific Password
    if app_password && !app_password.empty?
      UI.message("üîë Using App-Specific Password for TestFlight upload...")
      UI.message("Apple ID: #{apple_id}")
      sh("xcrun altool --upload-app -f '#{lane_context[SharedValues::IPA_OUTPUT_PATH]}' -t ios -u '#{apple_id}' -p '#{app_password}' --verbose")
      UI.success("‚úÖ Uploaded to TestFlight successfully!")

    # Local: Open in Transporter for manual upload
    else
      UI.important("‚ö†Ô∏è  No App-Specific Password found - using Transporter fallback")
      UI.important("üì¶ Opening in Transporter for manual upload...")
      sh("open -a Transporter '#{lane_context[SharedValues::IPA_OUTPUT_PATH]}'")
    end
  end

  desc "Deploy to App Store"
  lane :release do
    increment_build_number
    build_app(scheme: "TradeFly")
    upload_to_app_store(
      submit_for_review: false,
      automatic_release: false
    )
  end
end
